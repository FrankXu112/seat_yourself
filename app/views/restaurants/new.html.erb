<h1>Add New Restaurant</h1>


<% if @restaurant.errors.any? %>
  <% @restaurant.errors.full_messages.each do |msg| %>
  <li> <%= msg %> </li>
  <% end %>
<% end %>

<%= form_for(@restaurant, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :phone, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :url, class: "form-control" %>
    </div>
  </div>
  <%= f.label :category %>
  <%= f.select(:category_id) do %>
    <%= Category.all.each do |c| %>
    <%= content_tag(:option, c.name, value: c.id) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <div class="col-sm-10">
    <%= f.submit "Save", class: "btn-info" %>
    </div>
  </div>
<% end %>
<section class="footer">
  <%= link_to "Back", restaurants_path %>  
</section>